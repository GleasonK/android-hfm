<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/spaghetti"
            android:scaleType="fitXY"
            android:id="@+id/sell_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#FFF"
            />
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center">
            <TextView
                android:id="@+id/buy_item_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"
                android:textColor="@color/dark_green"
                android:text="Spaghetti"/>
            <TextView
                android:id="@+id/buy_item_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:text="Kevin Gleason"/>
            <TextView
                android:id="@+id/buy_item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:text="Chestnut Hill, MA"/>
        </LinearLayout>
        <TextView
            android:id="@+id/buy_item_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/dark_green"
            android:text="$2.50"/>

    </LinearLayout>





</LinearLayout>